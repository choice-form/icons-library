{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Choiceform Icons Preview",
  "version": "1.0.5",
  "identifier": "com.choiceform.icons-preview",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev:with-server",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Choiceform Icons Preview",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [{ "name": "node", "cmd": "node", "args": true }]
    },
    "fs": {
      "scope": {
        "allow": ["**"],
        "requireLiteralLeadingDot": false,
        "allowFileSystemWrite": true
      }
    },
    "path": { "all": true },
    "dialog": { "all": true, "open": true, "save": true }
  }
}
