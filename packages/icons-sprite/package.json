{
  "name": "@choiceform/icons-sprite",
  "version": "1.0.0",
  "description": "Generate SVG sprite files with symbols from individual SVG icons",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "icons-sprite": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "files": [
    "dist",
    "*.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "svg",
    "sprite",
    "icons",
    "symbol",
    "build-tool",
    "cli"
  ],
  "author": "Choiceform Team",
  "license": "MIT",
  "dependencies": {
    "@choiceform/icons-core": "workspace:*",
    "commander": "^12.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
